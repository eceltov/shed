{
  "name": "shared-web-editor",
  "version": "0.0.1",
  "main": "",
  "scripts": {
    "test": "jest",
    "start-controller-server": "node dev/controllerServer.js",
    "start-workspace-server": "node dev/workspaceServer.js",
    "build-client": "npx browserify -t [ babelify --presets [ @babel/preset-env @babel/preset-react ] ] dev/client/client.jsx -o dev/client/bundle.js --extension=.jsx"
  },
  "jest": {
    "testRegex": "(/__tests__/.*|(\\.|/)(test|spec))\\.(jsx?|js?|tsx?|ts?|mjs?)$",
    "transform": {
      "^.+\\.jsx?$": "babel-jest",
      "^.+\\.mjs$": "babel-jest"
    },
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "moduleFileExtensions": [
      "js",
      "jsx",
      "mjs"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git@gitlab.mff.cuni.cz:teaching/nprg045/krulis/2021-kloda-shared-web-editor.git"
  },
  "author": "Vojtech Kloda",
  "dependencies": {
    "@babel/preset-react": "^7.16.7",
    "babelify": "^10.0.0",
    "browserify": "^17.0.0",
    "core-js": "^3.21.1",
    "express": "^4.17.1",
    "express-react-view": "^1.1.7",
    "express-react-views": "^0.11.0",
    "jest": "^27.2.4",
    "react": "^16.14.0",
    "seedrandom": "^3.0.5",
    "websocket": "^1.0.34"
  },
  "devDependencies": {
    "@babel/core": "^7.17.8",
    "@babel/plugin-transform-modules-commonjs": "^7.17.7",
    "eslint": "^8.9.0",
    "eslint-config-airbnb": "^19.0.4",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jsx-a11y": "^6.5.1",
    "eslint-plugin-react": "^7.28.0",
    "eslint-plugin-react-hooks": "^4.3.0"
  }
}
